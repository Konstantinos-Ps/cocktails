<header
    class="bg-gray-900/95 backdrop-blur-sm shadow-lg fixed w-full top-0 z-50 border-b border-gray-800"
>
    <nav class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <svg
                    class="w-8 h-8 text-purple-400 mr-3"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M8 22h8"></path>
                    <path d="M12 11v11"></path>
                    <path d="m19 3-7 8-7-8Z"></path>
                </svg>
                <span
                    class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-yellow-400 bg-clip-text text-transparent tracking-tight"
                    style="font-family: var(--font-heading);"
                    >CocktailCraft</span
                >
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-10">
                <a
                    href="#home"
                    class="text-gray-300 hover:text-purple-400 transition-all duration-300 font-medium text-lg tracking-wide uppercase"
                    style="font-family: var(--font-body); letter-spacing: 0.1em;"
                    >Home</a
                >
                <a
                    href="#about"
                    class="text-gray-300 hover:text-purple-400 transition-all duration-300 font-medium text-lg tracking-wide uppercase"
                    style="font-family: var(--font-body); letter-spacing: 0.1em;"
                    >About</a
                >
                <a
                    href="#cocktails"
                    class="text-gray-300 hover:text-purple-400 transition-all duration-300 font-medium text-lg tracking-wide uppercase"
                    style="font-family: var(--font-body); letter-spacing: 0.1em;"
                    >Menu</a
                >
                <a
                    href="#contact"
                    class="text-gray-300 hover:text-purple-400 transition-all duration-300 font-medium text-lg tracking-wide uppercase"
                    style="font-family: var(--font-body); letter-spacing: 0.1em;"
                    >Visit</a
                >
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-button"
                class="md:hidden p-2 hover:bg-gray-800 rounded-lg transition-colors"
                aria-label="Toggle menu"
            >
                <svg
                    id="menu-icon"
                    class="w-6 h-6 text-gray-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg
                    id="close-icon"
                    class="w-6 h-6 text-gray-300 hidden"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Dropdown Menu -->
        <div
            id="mobile-menu"
            class="md:hidden hidden mt-4 pb-4 space-y-4 transition-all duration-300 ease-in-out"
        >
            <a
                href="#home"
                class="mobile-menu-link block px-4 py-3 text-gray-300 hover:text-purple-400 hover:bg-gray-800/50 rounded-lg transition-colors text-lg tracking-wide uppercase"
                style="font-family: var(--font-body); letter-spacing: 0.1em;"
            >
                Home
            </a>
            <a
                href="#about"
                class="mobile-menu-link block px-4 py-3 text-gray-300 hover:text-purple-400 hover:bg-gray-800/50 rounded-lg transition-colors text-lg tracking-wide uppercase"
                style="font-family: var(--font-body); letter-spacing: 0.1em;"
            >
                About
            </a>
            <a
                href="#cocktails"
                class="mobile-menu-link block px-4 py-3 text-gray-300 hover:text-purple-400 hover:bg-gray-800/50 rounded-lg transition-colors text-lg tracking-wide uppercase"
                style="font-family: var(--font-body); letter-spacing: 0.1em;"
            >
                Menu
            </a>
            <a
                href="#contact"
                class="mobile-menu-link block px-4 py-3 text-gray-300 hover:text-purple-400 hover:bg-gray-800/50 rounded-lg transition-colors text-lg tracking-wide uppercase"
                style="font-family: var(--font-body); letter-spacing: 0.1em;"
            >
                Visit
            </a>
        </div>
    </nav>
</header>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        const menuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");
        const menuIcon = document.getElementById("menu-icon");
        const closeIcon = document.getElementById("close-icon");
        const menuLinks = document.querySelectorAll(".mobile-menu-link");

        menuButton.addEventListener("click", () => {
            const isOpen = mobileMenu.classList.contains("hidden");

            // Toggle menu visibility
            mobileMenu.classList.toggle("hidden");
            mobileMenu.classList.toggle("block");

            // Toggle icons
            menuIcon.classList.toggle("hidden");
            closeIcon.classList.toggle("hidden");

            // Smooth animation
            if (isOpen) {
                mobileMenu.style.maxHeight = "0";
                setTimeout(() => {
                    mobileMenu.style.maxHeight = mobileMenu.scrollHeight + "px";
                }, 10);
            } else {
                mobileMenu.style.maxHeight = "0";
            }
        });

        // Close menu when clicking links
        menuLinks.forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu.classList.add("hidden");
                mobileMenu.classList.remove("block");
                menuIcon.classList.remove("hidden");
                closeIcon.classList.add("hidden");
                mobileMenu.style.maxHeight = "0";
            });
        });

        // Initialize max-height for animation
        mobileMenu.style.maxHeight = "0";
        mobileMenu.style.overflow = "hidden";
        mobileMenu.style.transition = "max-height 0.3s ease-in-out";
    });
</script>
